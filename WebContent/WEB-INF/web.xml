<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	
	<servlet>
		<servlet-name>getProducts</servlet-name>
		<servlet-class>com.miraclepersona.ServletDemo1</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>getProducts</servlet-name>
		<url-pattern>/getProducts</url-pattern>
	</servlet-mapping>
			<servlet>
		<servlet-name>sendInvoice</servlet-name>
		<servlet-class>com.hackathon.support.Invoice</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>sendInvoice</servlet-name>
		<url-pattern>/InvoiceServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>downloads</servlet-name>
		<servlet-class>com.miraclepersona.DownloadData</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>downloads</servlet-name>
		<url-pattern>/download</url-pattern>
	</servlet-mapping>
		<welcome-file-list>
		<welcome-file>index.html</welcome-file>
				<welcome-file>index.jsp</welcome-file>
		
	</welcome-file-list>
</web-app>
